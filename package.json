  },
  "homepage": "https://github.com/cypress-io/cypress-example-circleci-orb#readme",
  "devDependencies": {
    "@types/common-tags": "1.8.0",
    "@types/execa": "0.9.0",
    "@types/node": "10.14.12",
    "@types/temp-write": "3.3.0",
    "ava": "1.4.1",
    "ava-ts": "0.25.2",
    "cypress": "3.4.0",
    "execa": "1.0.0",
    "husky": "2.7.0",
    "js-yaml": "3.13.1",
    "mocha": "5.2.0",
    "mocha-junit-reporter": "1.22.0",
    "mocha-multi-reporters": "1.1.7",
    "temp-write": "3.4.0",
    "ts-node": "7.0.1",
    "typescript": "3.5.2"
  },
